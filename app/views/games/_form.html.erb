<%= form_with(model: game, local: true) do |form| %>
  <% if game.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(game.errors.count, "error") %> prohibited this game from being saved:</h2>

      <ul>
      <% game.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group w-25">
    <%= form.label :title %>
    <%= form.text_field :title, class:'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :rule_id %>
    <%= form.collection_select :rule_id, @rules, :id, :content %>
  </div>

  <div class="form-group">
    <%= form.label :component_id %>
    <%= form.collection_select :component_id, @components, :id, :name %>
  </div>

  <div class="form-group">
    <%= form.label :box_id %>
    <%= form.collection_select :box_id, @boxes, :id, :description %>
  </div>

  <div class="actions">
    <%= form.submit class:'btn btn-primary' %>
  </div>
<% end %>
