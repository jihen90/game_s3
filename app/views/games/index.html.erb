<p id="notice"><%= notice %></p>

<h1 class='text-center py-5'>Games</h1>

<table class='table'>
  <thead id='indexGame'>
    <tr>
      <th>Title</th>
      <th>Rule</th>
      <th>Component</th>
      <th>Box</th>
    </tr>
  </thead>

  <tbody>
    <% @games.each do |game| %>
      <tr>
        <td><%= game.title %></td>
        <td><%= link_to '<svg xmlns="http://www.w3.org/2000/svg" class="icon icon-tabler icon-tabler-download" width="30" height="30" viewBox="0 0 24 24" stroke-width="1.5" stroke="#00abfb" fill="none" stroke-linecap="round" stroke-linejoin="round">
          <path stroke="none" d="M0 0h24v24H0z" fill="none"/>
          <path d="M4 17v2a2 2 0 0 0 2 2h12a2 2 0 0 0 2 -2v-2" />
          <polyline points="7 11 12 16 17 11" />
          <line x1="12" y1="4" x2="12" y2="16" />
          </svg>'.html_safe, rails_blob_path(game.rule.document, disposition: "attachment") %></td>
        <td><%= link_to(image_tag(game.component.image.variant(resize: "100x100", colorspace: "gray")), rails_blob_path(game.component.image, disposition: "attachment"))%></td>
        <td><%= link_to(image_tag(game.box.image.variant(resize: "100x100", colorspace: "gray")), rails_blob_path(game.box.image, disposition: "attachment"))%></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Game', new_game_path, class:'btn btn-success' %>
